<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#CFD8DC">
            
	        <ProgressBar
	            android:id="@+id/progressBar1"
	            style="?android:attr/progressBarStyleHorizontal"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1" />
	            
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.70" 
        android:background="#CFD8DC"
        android:orientation="horizontal">


        
        <TextView
            android:id="@+id/progressLable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="7dp"
            android:text="Large Text"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/streakCounter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="7dp"
            android:text="Medium Text"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentDisplay"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.50" 
        android:background="#ECEFF1">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="2.80" 
        android:background="#455A64"
        style="?android:attr/buttonBarStyle" >

        <Button
            android:id="@+id/answerBtnLeft"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:tag="1"
            android:text="@string/Der"
            android:textColor="#ECEFF1"
            android:fontFamily="sans-serif-condensed" />

        <Button
            android:id="@+id/answerBtnCenter"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="2"
            android:text="@string/Die" 
            android:textColor="#ECEFF1"
            style="?android:attr/buttonBarButtonStyle" 
            android:fontFamily="sans-serif-condensed"/>

        <Button
            android:id="@+id/answerBtnRight"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:tag="3"
           	android:text="@string/Das"
            android:textColor="#ECEFF1"
            style="?android:attr/buttonBarButtonStyle"
            android:fontFamily="sans-serif-condensed" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.70" >
    </LinearLayout>

</LinearLayout>